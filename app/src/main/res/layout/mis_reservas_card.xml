<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_amarillo_fondo_negro"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícono a la izquierda -->
        <ImageView
            android:id="@+id/mis_creditos_icono"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/calendario_amarillo_intermedio" />

        <!-- Columna central: primer y tercer texto actuales -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Primer texto actual -->
            <TextView
                android:id="@+id/tv_clase_desc_nueva_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/amarillo_suave"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- Tercer texto actual -->
            <TextView
                android:id="@+id/tv_disponibles_nueva_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gris"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Columna derecha: segundo texto actual y dos adicionales -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Segundo texto actual -->

            <!-- Texto adicional 1 -->
            <TextView
                android:id="@+id/tv_fecha_nueva_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dia_nuevaReservaLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viernes"
                android:textColor="@color/amarillo_suave"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Texto adicional 2 -->
            <TextView
                android:id="@+id/tv_hora_nueva_reserva_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
